<script>
  (function() {
    'use strict';
    const params = new URLSearchParams(window.location.search);
    if (params.get('loc') === 'PLACEMENT') {
      window.stop();
      document.documentElement.innerHTML = '';
    } else {
      setTimeout(function() {
        window.location.href = 'yourlink.com';
      }, 500);
    }
  })();
</script>
